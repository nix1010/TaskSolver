<Window x:Class="CodeEditorApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:CodeEditorApplication"
        Title="Code Editor" Height="550" Width="725">

    <StackPanel>
        <Menu>
            <MenuItem Header="_File" >
                <MenuItem Header="_New" Name="New" Click="New_Click" />
                <MenuItem Header="_Open" Name="Open" Click="Open_Click" />
                <MenuItem Header="_Save" Name="Save" Click="Save_Click" />
                <MenuItem Header="_Save As" Name="SaveAs" Click="SaveAs_Click" />
                <Separator/>
                <MenuItem Header="E_xit" Name="exit" Click="Exit_Click" />
            </MenuItem>
            <MenuItem Header="_User" Name="_User">
                <MenuItem Header="_Login" Name="Login" Click="Login_Click"/>
            </MenuItem>
        </Menu>
        <WrapPanel>
            <Label>Programming Language</Label>
            <ComboBox Name="cmbProgrammingLanguage" Width="100"></ComboBox>
        </WrapPanel>
        <WrapPanel>
            <Label>Task</Label>
            <ComboBox Name="cmbTasks" Width="200"></ComboBox>
            <Button Click="Details_Click">Details</Button>
        </WrapPanel>
        <RichTextBox Name="rtbEditor" Height="410" Block.LineHeight="2"/>
        <WrapPanel HorizontalAlignment="Right">
            <local:UserControlSpinner x:Name="ucSpinner" Width="24" Visibility="Hidden"/>
            <Button Click="Send_Click" HorizontalAlignment="Right">Send</Button>
        </WrapPanel>
    </StackPanel>
</Window>
